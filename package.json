{
  // The name of your project/package — used for identification
  "name": "toothtrack-api",

  // The version of your app (start with 1.0.0 — update as you grow)
  "version": "1.0.0",

  // Short description of what your project does
  "description": "ToothTrack backend API for dentists and patients",

  // Entry point file — this is where your app starts
  "main": "server.js",

  // Scripts you can run using: npm start, npm test, etc.
  "scripts": {
    // This tells Render (or anyone) how to start the app
    "start": "node server.js"
  },

  // Keywords to help others find your app (optional, mostly for publishing to npm)
  "keywords": [],

  // Author name — just for reference
  "author": "Corey Pearce",

  // License type — MIT is a common open-source license
  "license": "MIT",

  // These are the packages (dependencies) your app needs to run
  "dependencies": {
    // Express: the framework that powers your API (handles routes, requests)
    "express": "^4.18.2",

    // pg: the PostgreSQL library for talking to your database
    "pg": "^8.11.1"
  }
}
